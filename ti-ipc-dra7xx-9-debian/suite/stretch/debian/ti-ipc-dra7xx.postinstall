#!/bin/sh

set -e

case "${1}" in
  configure)
   if dpkg --compare-versions "${2}" lt "0.8" && deb-systemd-helper --quiet is-enabled ti-ipc-dra7xx.service; then
     deb-systemd-helper disable ti-ipc-dra7xx.service
   fi
   ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`${1}'" >&2
    exit 1
    ;;
esac

